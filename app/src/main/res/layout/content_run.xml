<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_run"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.benwi.assignment1.RunActivity"
    tools:showIn="@layout/activity_run"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/jogging"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Distance:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:layout_above="@+id/timerValue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/distanceValue"
        android:text="0.00 miles"
        android:textAlignment="textEnd"
        android:contextClickable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="0dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="5dp"
        android:background="@android:color/transparent"
        tools:gravity="end"
        android:layout_width="95dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/calorieValue"
        android:text="0.00"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignBaseline="@+id/distanceValue"
        android:layout_alignBottom="@+id/distanceValue"
        android:layout_centerHorizontal="true"
        android:padding="0dp"
        android:paddingBottom="5dp"
        android:background="@android:color/transparent"
        android:layout_width="70dp" />

    <TextView
        android:text="Calories burned:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:layout_above="@+id/calorieValue"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <EditText
        android:cursorVisible="false"
        android:layout_height="wrap_content"
        android:inputType="none|time"
        android:ems="10"
        android:id="@+id/timerValue"
        android:text="00:00:00"
        android:textAlignment="viewStart"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="95dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:background="@android:color/transparent" />

    <TextView
        android:text="Elapsed time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="29dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="START RUN"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:onClick="startRun"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_width="185dp"
        android:layout_below="@+id/timerValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:text="END RUN"
        android:layout_height="wrap_content"
        android:id="@+id/endButton"
        android:onClick="endRun"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_width="185dp"
        android:layout_alignBaseline="@+id/startButton"
        android:layout_alignBottom="@+id/startButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="SAVE RUN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:layout_below="@+id/startButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="saveRun" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/saveButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/runList" />

    <TextView
        android:text="Run log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView3"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_below="@+id/saveButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
